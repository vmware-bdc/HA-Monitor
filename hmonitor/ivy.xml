<ivy-module version="1.0" xmlns:m ="http://ant.apache.org/ivy/maven">
  <info organisation="org.apache.ambari" module="hmonitor">
    <license name="Apache"/>
    <ivyauthor name="Apache" url="http://hadoop.apache.com"/>
    <description>
      Service availability monitoring for Hadoop
    </description>
  </info>
  <configurations defaultconfmapping="default">
    <conf name="default" extends="master,redist"/>
    <conf name="build" visibility="private"
      description="artifacts needed to build the application"/>
    <conf name="compile"
      extends="redist"
      description="artifacts needed to compile the application"/>
    <conf name="test" extends="compile,default"
      description="the classpath needed to run tests"/>
    <conf name="master"
      description="contains the artifact but no dependencies"/>
    <conf name="redist"
      description="external dependencies to redistribute"/>
  </configurations>

  <publications>
    <!--get the artifact from our module name-->
    <artifact conf="master"/>
  </publications>
  <dependencies>

     <dependency org="org.apache.hadoop"
      name="hadoop-mapreduce-client"
      rev="2.0.0-cdh4.1.2"
      conf="redist->default"/>

    <dependency org="org.apache.hadoop"
      name="hadoop-common"
      rev="2.0.0-cdh4.1.2"
      conf="redist->default">
      <exclude org="org.apache.ant"/>
      <exclude org="ant"/>
    </dependency>
    <dependency org="org.apache.hadoop"
      name="hadoop-hdfs"
      rev="2.0.0-cdh4.1.2"
      conf="redist->default"
      >
      <artifact name="hadoop-hdfs-tests" type="jar" m:classifier="tests"/>
      <artifact name="hadoop-hdfs" type="jar" />
    </dependency>
    <dependency org="org.apache.hadoop"
      name="hadoop-core"
      rev="2.0.0-mr1-cdh4.1.2"
      conf="redist->default">
      <exclude org="org.apache.ant"/>
      <exclude org="ant"/>
    </dependency>
     <dependency org="org.apache.hadoop"
      name="hadoop-mapreduce"
      rev="2.0.0-cdh4.1.2"
      conf="redist->default"/>

     <dependency org="org.apache.hadoop"
      name="hadoop-tools"
      rev="${hadoop.version}"
      conf="redist->default"/>
    <dependency org="org.apache.hadoop"
      name="hadoop-test"
      rev="${hadoop.version}"
       conf="redist->default"/>
     <dependency org="org.apache.hadoop"
      name="hadoop-examples"
      rev="${hadoop.version}"
       conf="redist->default"/>

    <dependency org="junit"
      name="junit"
      rev="${junit.version}"
      conf="test->default"/>

    <dependency org="com.jcraft" name="jsch"
      rev="${jsch.version}"
      conf="redist->default"/>


    <dependency org="log4j" name="log4j"
      rev="${log4j.version}"
      conf="redist->default"/>

    <dependency
      org="org.mortbay.jetty"
      name="jetty"
      rev="${jetty.version}" conf="redist->default"/>

    <dependency
      org="org.mortbay.jetty"
      name="jetty-util"
      rev="${jetty.version}" conf="redist->default"/>

    <dependency
      org="asm"
      name="asm"
      rev="${asm.version}" conf="redist->default"/>

    <dependency
      org="com.sun.jersey"
      name="jersey-core"
      rev="${jersey-core.version}" conf="redist->default"/>

    <dependency
      org="com.sun.jersey"
      name="jersey-json"
      rev="${jersey-json.version}" conf="redist->default"/>

    <dependency
      org="com.sun.jersey"
      name="jersey-server"
      rev="${jersey-server.version}" conf="redist->default"/>

    <dependency
      org="tomcat"
      name="jasper-runtime"
      rev="${jsp-api.version}" conf="redist->default"/>

    <dependency
      org="tomcat"
      name="jasper-compiler"
      rev="${jsp-api.version}" conf="redist->default"/>


    <dependency org="org.codehaus.groovy" name="groovy-all"
      rev="${groovy.version}"
      conf="redist,build->default"/>

    <dependency org="commons-io" name="commons-io"
      rev="${commons-io.version}"
      conf="redist->default"/>

    <dependency org="commons-logging" name="commons-logging"
      rev="${commons-logging.version}"
      conf="redist->default"/>
    <dependency org="commons-cli" name="commons-cli"
      rev="${commons-cli.version}"
      conf="redist->default"/>
    <!--<dependency org="org.apache.hbase" name="hbase" rev="0.92.1"/>-->


  </dependencies>
</ivy-module>
